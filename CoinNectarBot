<body>
    <div class="container">
        <h1>CoinNectarBot</h1>
        <p class="tagline">Earn Crypto by Watching Ads!</p>

        <div class="balance-display">
            <span>Your Balance:</span>
            <span id="userBalance">$0.00</span>
        </div>

        <div class="info-card">
            <strong>Ads Watched Today:</strong> <span id="adsWatched">0</span> / 20
            <div class="progress-bar-container">
                <div class="progress-bar" id="dailyAdProgress" style="width: 0%;"></div>
            </div>
            <p style="margin-top: 10px;">Next reset in: <span id="timeToReset">23h 59m</span></p>
        </div>

        <h2>Watch Ads & Earn</h2>
        <div class="ad-section">
            <div class="ad-placeholder" id="currentAdDisplay">
                Advertisement will appear here.
            </div>
            <button class="btn-watch" id="watchAdBtn">Watch Ad (Earn $0.01)</button>
        </div>

        <h2>How it Works</h2>
        <div class="info-card">
            <p><strong>Daily Limit:</strong> Watch up to 20 ads per day.</p>
            <p><strong>Earnings:</strong> Get $0.01 for each fully watched ad.</p>
            <p><strong>Resume Feature:</strong> Ads resume from where you left off if interrupted.</p>
            <p><strong>Cascading Ads:</strong> Three new ads appear instantly after one is finished.</p>
            <p><strong>IP & Account Security:</strong> One IP per user, secure data storage.</p>
            <p><strong>Data Persistence:</strong> Your progress is saved even if you refresh.</p>
        </div>

        <p class="footer-note">Powered by CoinNectarBot Telegram Mini App</p>
    </div>

    <script>
        // This is a placeholder for JavaScript logic.
        // A real app would integrate with Telegram's WebApp API and a backend.

        const userBalanceElement = document.getElementById('userBalance');
        const adsWatchedElement = document.getElementById('adsWatched');
        const dailyAdProgress = document.getElementById('dailyAdProgress');
        const timeToResetElement = document.getElementById('timeToReset');
        const currentAdDisplay = document.getElementById('currentAdDisplay');
        const watchAdBtn = document.getElementById('watchAdBtn');

        let userBalance = 0.00;
        let adsWatchedToday = 0;
        const dailyAdLimit = 20;

        function updateUI() {
            userBalanceElement.textContent = `$${userBalance.toFixed(2)}`;
            adsWatchedElement.textContent = adsWatchedToday;
            const progress = (adsWatchedToday / dailyAdLimit) * 100;
            dailyAdProgress.style.width = `${progress}%`;
            
            if (adsWatchedToday >= dailyAdLimit) {
                watchAdBtn.disabled = true;
                watchAdBtn.textContent = "Daily Limit Reached";
                watchAdBtn.style.backgroundColor = '#6c757d';
            } else {
                watchAdBtn.disabled = false;
                watchAdBtn.textContent = "Watch Ad (Earn $0.01)";
                watchAdBtn.style.backgroundColor = '#28a745';
            }
            // In a real app, timeToReset would be calculated from backend or Telegram API
            // For this example, we'll keep it static or simulated.
        }

        watchAdBtn.addEventListener('click', () => {
            if (adsWatchedToday < dailyAdLimit) {
                // Simulate watching an ad
                currentAdDisplay.textContent = "Loading Ad...";
                watchAdBtn.disabled = true;

                setTimeout(() => {
                    // Simulate ad playback (e.g., 5-10 seconds)
                    currentAdDisplay.textContent = "Watching Ad (Please wait)...";
                    let adTime = 5; // seconds
                    let adInterval = setInterval(() => {
                        adTime--;
                        currentAdDisplay.textContent = `Watching Ad (${adTime}s remaining)...`;
                        if (adTime <= 0) {
                            clearInterval(adInterval);
                            adsWatchedToday++;
                            userBalance += 0.01;
                            currentAdDisplay.textContent = "Ad Finished! Earning Credited.";
                            updateUI();
                            // In a real app, you'd then load 3 more ads or enable the button for next ad
                            setTimeout(() => {
                                currentAdDisplay.textContent = "Advertisement will appear here.";
                                watchAdBtn.disabled = false;
                            }, 1500); // Small delay before next ad button is active
                        }
                    }, 1000);

                }, 1000); // Simulate network delay for ad load
            }
        });

        // Initial UI update
        updateUI();

        // Simulate daily reset for demonstration (in a real app, this would be server-side)
        setInterval(() => {
            // This is a very basic simulation. A real timer would be more complex.
            let now = new Date();
            let midnight = new Date(now);
            midnight.setHours(24, 0, 0, 0);
            let timeDiff = midnight.getTime() - now.getTime();
            let hours = Math.floor(timeDiff / (1000 * 60 * 60));
            let minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
            let seconds = Math.floor((timeDiff % (1000 * 60)) / 1000);
            
            timeToResetElement.textContent = `${hours}h ${minutes}m ${seconds}s`;

            if (timeDiff <= 0) {
                adsWatchedToday = 0; // Reset ads
                updateUI();
            }
        }, 1000); // Update every second
    </script>
