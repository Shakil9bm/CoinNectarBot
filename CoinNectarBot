  <script>
    // ==== MONITAG CONFIGURATION ====
    const MONITAG_BOT_TOKEN = "8150727730:AAHP4tGg4kS6qQTXGwFQ9GYrXhvgwwjKB1k";
    const MONITAG_USER_ID  = "7217886491";

    const AD_REWARD = 1000;
    const DAILY_LIMIT = 50;
    const MIN_WITHDRAW = 100000;

    let balance = 0;
    let adsWatched = 0;

    const balanceEl = document.getElementById('balance');
    const adsWatchedEl = document.getElementById('adsWatched');
    const liveFeed = document.getElementById('liveFeed');
    const status = document.getElementById('status');
    const withdrawBtn = document.getElementById('withdrawBtn');
    const withdrawMsg = document.getElementById('withdrawMsg');

    document.getElementById('watchAdBtn').addEventListener('click', () => {
      if (adsWatched >= DAILY_LIMIT) {
        alert("Daily ad limit (50) reached.");
        return;
      }
      adsWatched++;
      balance += AD_REWARD;
      adsWatchedEl.textContent = adsWatched;
      balanceEl.textContent = balance + " BTTC";
      addFeedItem("You", AD_REWARD);
      status.textContent = `Ads watched today: ${adsWatched} / ${DAILY_LIMIT}`;

      // Monetag logging
      console.log(`MONITAG: BotToken=${MONITAG_BOT_TOKEN}, UserID=${MONITAG_USER_ID}, Earned=${AD_REWARD}`);
    });

    withdrawBtn.addEventListener('click', () => {
      const id = document.getElementById('binanceId').value.trim();
      const amt = Number(document.getElementById('withdrawAmount').value);
      if (!id) {
        withdrawMsg.textContent = "Please enter your Binance ID.";
        withdrawMsg.style.color = "red";
        return;
      }
      if (amt < MIN_WITHDRAW) {
        withdrawMsg.textContent = "Minimum withdrawal is 100,000 BTTC.";
        withdrawMsg.style.color = "red";
        return;
      }
      if (amt > balance) {
        withdrawMsg.textContent = "Insufficient balance.";
        withdrawMsg.style.color = "red";
        return;
      }
      balance -= amt;
      balanceEl.textContent = balance + " BTTC";
      withdrawMsg.textContent = `Withdrawal request of ${amt} BTTC sent to Binance ID ${id}.`;
      withdrawMsg.style.color = "green";

      // Monetag logging
      console.log(`MONITAG: BotToken=${MONITAG_BOT_TOKEN}, UserID=${MONITAG_USER_ID}, Withdraw=${amt}`);
    });

    function addFeedItem(user, amount) {
      const div = document.createElement('div');
      div.className = 'feed-item';
      div.innerHTML = `<div><strong>${user}</strong><br><small>${new Date().toLocaleTimeString()}</small></div>
                       <div><strong>+${amount} BTTC</strong></div>`;
      liveFeed.prepend(div);
    }
  </script>
